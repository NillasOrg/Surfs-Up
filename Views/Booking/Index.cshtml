@model List<CatalogItem>
<main>
    <section id="booking">
        <h2>Book dit udstyr</h2>
        <form id="booking-form" asp-action="CreateBooking" method="post">
            <label for="name">Navn:</label>
            <input type="text" id="name" name="Customer.Name" required>

            <label for="email">E-mail:</label>
            <input type="email" id="email" name="Customer.Email" required>

            <label for="equipment">VÃ¦lg udstyr:</label>
            <select id="equipment" name="CatalogItem.CatalogItemId" required>
                @foreach (var item in Model as List<CatalogItem>)
                {
                    <option value="@item.CatalogItemId">@item.Name</option>
                }
            </select>

            <label for="date">Dato:</label>
            <input type="date" id="date" name="Date" required>

            <button type="submit">Book Nu</button>
        </form>
    </section>
</main>
