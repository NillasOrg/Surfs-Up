@model List<CatalogItem>
<main class="container">
    <div class="booking-left">
        <div class="booking-head">
            <h2>Book dit udstyr</h2>
        </div>
        <div class="booking-body">
            <form id="booking-form" asp-action="CreateBooking" method="post">
                <div>
                    <label for="name">Navn:</label>
                    <br />
                    <input type="text" id="booking-name" name="Customer.Name" required>
                </div>
                <div>
                    <label for="email">E-mail:</label>
                    <br />
                    <input type="email" id="booking-email" name="Customer.Email" required>
                </div>
                <div id="date-elem">
                    <div class="dateElement-left">
                        <label for="start-date">Start Dato:</label>
                        <br />
                        <input type="date" id="booking-date" name="StartDate" required>
                    </div>

                    <div class="dateElement-left">
                        <label for="end-date">Slut Dato:</label>
                        <br />
                        <input type="date" id="booking-date" name="EndDate" required>
                    </div>
                </div>
                <div>
                    <label for="remark">Bem√¶rkning:</label>
                    <br />
                    <textarea type="text" id="booking-remark" name="Remark"></textarea>
                </div>
                <div id="booking-submit">
                    @if(!Model.Any())
                    {
                        <button disabled style="background-color: rgb(98, 98, 98);">Book Nu</button>
                    }
                    else{
                        <button id="active-btn" type="submit">Book Nu</button>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="booking-right">
        <div class="booking-head">
            <h2> Kurv </h2>
        </div>
        <div class="booking-body">
        @if(!Model.Any())
        {
            <h2 style="display: flex; justify-content: center;">Kurven er tom</h2>
        }
        @foreach(var item in Model) 
        {
            <div class="booking-item">
                <div class="booking-item-left">
                    <h1>@item.Name</h1>
                    <p>@item.Description</p>
                </div>
                <div class="booking-item-right">
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="id" value="@item.CatalogItemId" />
                        <button type="submit">
                           <img src="~/images/trash-can.png" alt="Remove from cart">
                        </button>
                    </form>
                </div>
            </div>
        }
        </div>
    </div>
</main>